<script>
      function changestatus(orderID, currentStatus) {
           
            const selectedStatus = document.getElementById('select').value;
           
            if (selectedStatus !== currentStatus) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: 'Are you sure you want to change the status!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, change it!',
                    cancelButtonText: 'No, cancel!',
                }).then((result) => {
                  if(result.isConfirmed){

                  
                  Swal.fire({
                        title: 'Status Changed!',
                        text: 'The status has been successfully changed.',
                        icon: 'success'
                    }).then(()=>{

                       // alert(orderID)
                        //alert(selectedStatus)
                        
                        $.ajax({
                              url: "/admin/changeStatus",
                              method:"post",
                              data:{
                                orderID: orderID,
                                statusID: selectedStatus
                              },
                              success:(response) => {
                                    if (response.status == true ) {
                                    
                                                window.location.href='/admin/orderList'

                                    }else {
                                          Swal.fire({
                                              title: 'Error',
                                              text: 'Failed to change the status.',
                                              icon: 'error'
                                          });
                                      }
                                }
                        })

                    })
                  }
                  
                  
            });
      }else {
            // Status not changed
            Swal.fire({
                title: 'Info',
                text: 'The status is already set to ' + currentStatus + '. No changes made.',
                icon: 'info'
            });
        }
}
function back(){
      window.location.href="/admin/orderList"
}
</script>

