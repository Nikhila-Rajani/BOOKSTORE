<script>
    function userBlock(id){
        Swal.fire({
            title: 'Confirm Block',
            text: 'Are you sure you want to block this user?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, block',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/admin/block-user",
                    method: "POST", 
                    data: {
                        id
                    },  
                
                    success: (response) => {
                        if (response.status === "Blocked") {
                            Swal.fire('User Blocked', 'The user has been blocked successfully.', 'success').then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire('Error', 'Unable to block user.', 'error');
                        }
                    },
                    error: (error) => {
                        Swal.fire('Error', 'An error occurred while processing your request.', 'error');
                    }
                });
            }
        });
    }


    function userunBlock(id){
        Swal.fire({
            title: 'Confirm UnBlock',
            text: 'Are you sure you want to Unblock this user?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, Unblock',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/admin/unblock-user",
                    method: "POST", 
                    data: {
                        id
                    },  
                
                    success: (response) => {
                        if (response.status === "Unblocked") {
                            Swal.fire('User UnBlocked', 'The user has been Unblocked successfully.', 'success').then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire('Error', 'Unable to Unblock user.', 'error');
                        }
                    },
                    error: (error) => {
                        Swal.fire('Error', 'An error occurred while processing your request.', 'error');
                    }
                });
            }
        });
    }
</script>


