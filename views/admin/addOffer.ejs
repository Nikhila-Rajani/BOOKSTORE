<script>
      function createOffer(){
            const Category = document.getElementById('select').value;
            const startingDate = document.getElementById('startingDate').value;
            const endingDate = document.getElementById('endingDate').value;
            const discount = document.getElementById('discount').value;

            $.ajax({
                 url:'/admin/addOffer',
                 method:'post',
                 data:{
                  Category,
                  startingDate,
                  endingDate,
                  discount
                 } ,
                 success:(response) =>{
                  if (response.status == "exist") {
                        alert("exist");  // Consider removing this if you only need the SweetAlert
                        setTimeout(() => {
                            Swal.fire({
                                icon: 'warning',
                                title: 'Offer Already Exists',
                                text: 'The offer for this category already exists.',
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.reload();
                                }
                            });
                        }, 2000);
                    }
                    
                  if(response.status == "created"){
                        alert("created")
                        Swal.fire({
                              icon: 'success',
                              title: 'Category Offer Created',
                              text: 'The category offer has been successfully created.',
                              confirmButtonText: 'OK'
                          }).then((result) => {
                              window.location.reload();
                          })
                          
                  }
                 }


            })
      }

      

      function deletes (id){
          
            $.ajax({
                  url : '/admin/deleteOffer',
                  method : 'post',
                  data : {
                        id
                  },
                  success : (response)=>{
                        if(response.status == "deleted"){
                              window.location.reload()
                        }
                  }

            })
      }
</script>


