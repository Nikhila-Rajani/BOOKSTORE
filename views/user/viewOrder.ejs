                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                        <!-- <th scope="col">Cancel</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    <% order.products.forEach(element => { %>
                                 
                                      
                                   
                               
                                   
                                    <tr>
                                        <td class="image"><img src="/uploads/<%= element.product.image[0] %>" alt="#"></td>
                                        <td class="product-des">
                                            <h5 class="product-name"><a href="shop-product-right.html"><%= element.product.name %> </a></h5>
                                        </td>
                                        <td class="price" data-title="Price"><span><%= element.amount*  element.stock %> </span></td>
                                        <td class="text-center" data-title="Stock">
                                          <span><%= element.stock %></span>
                                        </td>
                                        <td class="text-center" data-title="Address">
                                          <span><%= order.address.address %></span>
                                        </td>
                                        <td class="text-center" data-title="Address">
                                          <span><%= order.date %></span>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <span><%= order.status %></span>
                                        </td>
                                        <% if (element.productStatus === true) { %>
                                          <td><span class="badge rounded-pill alert-warning">Cancelled</span></td>
                                        <% }else{ %>
                                            <td >
                                                <a onclick="cancelIndividual('<%= element.product._id %>','<%=order._id %>','<%= element.stock  %>','<%= element.product.offerPrice *  element.stock %>')">Cancel</a>
                                            </td
                                       <% } %>
                                        >
                                        
                                        
                                    </tr>
                                    <% }) %>
                            
                                    
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="cart-action text-end">
                              <% if (order.status === 'Cancelled') { %>
                                    <a href="/orderDetails"><button 
                                          class="btn  mr-10 mb-sm-15"><i class="fi-rs-cross mr-10"></i>Back
                                          </button></a>
                                          <a class="btn " href="/"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>


                                <% } else if (order.status === 'Delivered') { %>
                                    <button onclick="openReturnModal(`<%= order._id %>`)"
                                        class="btn  mr-10 mb-sm-15"><i class="fi-rs-cross mr-10"></i>Return
                                        Order</button>
                                    <a class="btn " href="/"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>

                                    <div id="returnModal" class="modal">
                           
                                    <div class="modal-content">
                                      <span class="close" onclick="closeReturnModal()">&times;</span>
                                      <h5>Select reason for return:</h5>
                                      <p id="errormessage" class="text-danger"></p>
                                      <input type="checkbox" id="reasonIncorrectItem" name="returnReason" value="Incorrect Item">
                                      <label for="reasonIncorrectItem">Incorrect Item</label><br>
                                      <input type="checkbox" id="reasonItemDamaged" name="returnReason" value="Item Damaged">
                                      <label for="reasonItemDamaged">Item Damaged</label><br>
                                      <input type="checkbox" id="reasonSizeFitIssue" name="returnReason" value="Size/Fit Issue">
                                      <label for="reasonSizeFitIssue">Size/Fit Issue</label><br>
                                      
                                      <button onclick="submitReturn('<%= order._id %>')">Submit</button>
                                    </div>
                                           
                              <% }else {%>
                              <button onclick="cancelOrder('<%= order._id %>','<%= order.paymentMethod %>','<%= order.user %>')"
                                    class="btn  mr-10 mb-sm-15"><i class="fi-rs-cross mr-10"></i>Cancel
                                    Order</button>
                            <a class="btn " href="/"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                            <%} %>
                            
                        </div>
                       
                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                        <div class="row mb-50">
                            <!--  -->
                            <div class="col-lg-6 col-md-12">
                                <div class="border p-md-4 p-30 border-radius cart-totals">
                                    
                                    <div class="table-responsive">
                                        <table class="table">

                                            <tbody>
                                                <tr>
                                                    <td class="cart_total_label">Subtotal</td>
                                                    <td class="cart_total_amount"><span class="font-lg fw-900 text-brand">RS: <%= order.totalamount %></span></td>
                                                </tr>
                                                <tr>
                                                    <td class="cart_total_label">Shipping</td>
                                                    <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free Shipping</td>
                                                </tr>
                                                <tr>
                                                    <td class="cart_total_label">Total</td>
                                                    <input type="hidden" value="<%= order.totalamount %>" id="price">
                                                    <td class="cart_total_amount"><strong><span class="font-xl fw-900 text-brand" >RS:<%= order.totalamount %></span></strong></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <% if (order.status === "Delivered") { %>
                                            <a href="/invoice?id=<%= order._id %>"><button
                                                class="btn  mr-10 mb-sm-15">Download Invoice</button></a>
                                         <input type="hidden" id="hi" value="<%= order._id %>">
                                        <% } %>
                                    </div>
                                   <% if (order.status === "payment failed") { %>
                                    <button onclick="payAgain(`<%=order._id %>`)"
                                        class="btn btn-fill-out btn-block mt-30">Retry
                                        Payment</button>
                                   <% } %>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
